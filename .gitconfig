[alias]
	st = status -s
	lg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(blue)(%an <%ae>)%Creset' --abbrev-commit --date=relative
	ls = ls-files
	tags = tag -l
	branches = branch -a
	remotes = remote -v
	contributors = shortlog --summary --numbered
[apply]
	whitespace = fix
[branch]
	autosetuprebase = always
[checkout]
	defaultRemote = origin
[color]
	ui = auto
[commit]
	gpgsign = false
[core]
	attributesfile = ~/.gitattributes
	autocrlf = input
	editor = nvim
	excludesfile = ~/.gitignore
	pager = less -F
	precomposeunicode = false
	trustctime = false
	untrackedCache = true
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space
[diff]
	colorMoved = zebra
	compactionHeuristic = true
	renames = copies
[diff "bin"]
	textconv = hexdump -v -C
[fetch]
	prune = true
[help]
	autocorrect = 1
[merge]
	log = true
[pager]
	branch = false
[push]
	default = simple
	followTags = true
[pull]
	rebase = true
[rebase]
	autosquash = true
[user]
	email = fjhoelsg@users.noreply.github.com
	name = Jhoel Salas
[worktree]
	guessRemote = true
